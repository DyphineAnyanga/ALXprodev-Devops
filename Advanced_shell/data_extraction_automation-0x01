#!/bin/bash
# data_extraction_automation-0x01: Extract Pok√©mon name, type, weight, height from JSON

# Ensure the JSON file exists
if [ ! -f "data.json" ]; then
  echo "Error: data.json not found."
  exit 1
fi

# Extract fields using jq
jq -r '
  .name,
  .types[0].type.name,
  .weight,
  .height
' data.json | awk '
  NR==1 { name=$0 }
  NR==2 { type=$0 }
  NR==3 { weight=$0/10 }  # Convert to kg (1 unit = 0.1kg)
  NR==4 { height=$0/10 }  # Convert to m (1 unit = 0.1m)
  END {
    printf "%s is of type %s, weighs %dkg, and is %.1fm tall.\n", name, type, weight, height
  }
' | sed -E 's/^([a-z])/\U\1/; s/type ([a-z])/\U\1/'
